@model List<TravelTripProje.Models.Entities.Blog>
@{
    int number = 1;
}

<div class="padding">
    <h4>En Popüler 10 Blog</h4>
    <ul class="list list-pad">
        @foreach (var item in Model)
        {
            <li class="list-bg"><span>@number</span><a href="/Blog/BlogDetay/@item.ID">@item.Baslik</a></li>
            number++;
        }
    </ul>
    <a href="/Blog/Index/" class="link1">Tüm Bloglar</a>
</div>