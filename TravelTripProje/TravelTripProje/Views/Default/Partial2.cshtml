@model List<TravelTripProje.Models.Entities.Blog>

<div class="right">
    @foreach (var item in Model)
    {
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" style="height: 180px; width: 300px;"/>
        </div>
        <div class="left-text">

            <h4>@item.Baslik.Substring(0,28) ...</h4>
            <span class="doller">@item.Tarih.ToString("dd.mm.yyyy")</span>
            <p>@item.Aciklama.Substring(0, 75) ...</p>
            <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Daha Fazlası>></span></a></p>
        </div>
    }
</div>
